<div style="height: 60px">

</div>
<%= form_for Product.new do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, class: "form-control", step: 0.1 %>
    </div>
    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: "form-control", step: 2 %>
    </div>

    <%= submit_tag "salvar", class: "btn btn-primary" %>
<% end %>

