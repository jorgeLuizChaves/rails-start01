<div style="height: 60px">

</div>

<% @product.errors.full_messages.each do |m| %>
    <div class="alert alert-danger" role="alert"><%=m%></div>
<% end %>

<%= form_for @product do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, class: "form-control", step: 0.1 %>
    </div>
    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: "form-control", step: 2 %>
    </div>
    <div class="form-group">
      <%= f.label :department %>
      <%= f.collection_select :department_id, @departments, :id, :name, {}, class: "form-control" %>
    </div>

    <%= submit_tag btn_label, class: "btn btn-primary" %>
<% end %>

